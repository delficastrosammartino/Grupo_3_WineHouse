<!DOCTYPE html>

<html lang="es">
  <head>
    <%- include("../partials/head.ejs") %>
    <link rel="stylesheet" href="/css/detalles.css" />
  </head>

  <body>
    <%- include("../partials/header.ejs") %>

    <main>
      <section class="seccion">
        <div class="ruta-cruz">
          <div class="ruta-producto">
            <a href="/" style="text-decoration: none; color: black">Inicio</a> /
            Productos / Detalles de <%= product.name%>
          </div>

          <div class="cruz-cerrar">
            <a href="/products">
              <i class="fa-solid fa-x"></i>
            </a>
          </div>
        </div>

        <div class="contenedor-imagenes-detalles">
          <div class="imagenes-detalles">
            <div class="carrusel-minis">
              <div class="carrusel">
                <div class="contenedor-imagen-carrusel">
                  <img
                    class="imagen-principal imagenes-producto"
                    src="/images/productImages/<%= product.foto%>"
                    alt="Imagen de <%= product.name%>"
                  />
                </div>
              </div>

              <div class="contenedor-minis">
                <div class="miniaturas-img">
                  <div class="mini">
                    <img
                      class="imagenes-producto"
                      src="/images/productImages/<%= product.foto%>"
                      alt="Vino elementos malbec"
                    />
                  </div>

                  <div class="mini">
                    <img
                      class="imagenes-producto"
                      src="/images/productImages/<%= product.foto%>"
                      alt="Pack de seis vinos elementos"
                    />
                  </div>

                  <div class="mini">
                    <img
                      class="imagenes-producto"
                      src="/images/productImages/<%= product.foto%>"
                      alt="Pack vino, copa y caja"
                    />
                  </div>
                </div>
              </div>
            </div>

            <div class="contenedor-detalles">
              <div class="details nombre-producto">
                <h2><%= product.name%></h2>
              </div>

              <div class="details tamanio">
                <p><%= product.size%> cc</p>
              </div>

              <div class="contenedor-precio-descuento">
                <div class="contenedor-precios">
                  <p
                    class="details precios <% if (product.discount > 0){%>tachar-precio<%}%>"
                  >
                    $<%= product.price%>
                  </p>

                  <% if (product.discount > 0){%>
                  <p class="details precios precio-discount">
                    $<%= (product.price - ((product.price/100) *
                    product.discount))%>
                  </p>
                  <%}%>
                </div>

                <% if (product.discount > 0){%>
                <div>
                  <p class="descuentos"><%= product.discount%>% off</p>
                </div>
                <%}%>
              </div>

              <div>
                <div class="details cantidad-agregar">
                  <div class="agregar">
                    <div class="details agregar-al-carrito">
                      <a href="/products/carrito" class="boton-agregar">
                        <p class="texto-agregar">Agregar al carrito</p>
                      </a>
                    </div>
                  </div>

                  <div class="cantidad-sumar">
                    <div>
                      <p>Cantidad</p>
                    </div>

                    <div class="sumar-restar">
                      <p>- 1 +</p>
                    </div>
                  </div>
                </div>

                <div class="formas">
                  <div class="details formas-de-pago">
                    <a href="#medios-pago" class="medios-pago"
                      >Ver formas de pago</a
                    >
                  </div>
                </div>
              </div>

              <div class="contenedor-descripcion">
                <div class="titulos-chicos">
                  <h2>Detalles</h2>
                </div>

                <div class="details descripcion-producto">
                  <p><%= product.descripcion%></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section>
        <div class="display-relacionados">
          <div class="productos-relacionados">
            <div class="contenedor-titulo-prod-rel">
              <h2>Productos relacionados</h2>
            </div>

            <div class="contenedor-articulos-rel">
              <% for ( let i = 0; i < 4; i++){ %>
              <article class="articulo-rel">
                <div class="sombras">
                  <div>
                    <div>
                      <img
                        src="/images/productImages/<%= product.foto%>"
                        alt="Producto relacionado <%=[i+1]%>"
                        class="imagenes-relacionados relacionado-<%=[i+1]%>"
                      />
                    </div>
                  </div>

                  <div class="descripcion-articulo-<%=[i+1]%>">
                    <div class="detalles-articulo-rel">
                      <p><%= product.name%></p>
                    </div>

                    <div class="detalles-articulo-rel">
                      <p><%= product.price%></p>
                    </div>
                  </div>
                </div>
              </article>

              <%}%>
            </div>
          </div>
        </div>
      </section>
    </main>

    <%- include("../partials/footer.ejs") %>
  </body>
</html>
